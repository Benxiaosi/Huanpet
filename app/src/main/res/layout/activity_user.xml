<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huanpet.view.activity.user.UserActivity">

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:layout_marginLeft="40px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="头像"
            android:textSize="20sp" />
        <com.example.huanpet.view.activity.home.been.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/user_enter"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/enter" />

    </LinearLayout>
    <TextView
        android:id="@+id/exit"
        android:layout_margin="40px"
        android:layout_width="match_parent"
        android:background="#e11b1b"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="120px" />
</LinearLayout>
