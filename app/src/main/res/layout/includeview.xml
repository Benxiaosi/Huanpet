<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:contentDescription="@string/app_name"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:contentDescription="@string/app_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/in_image"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y35"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/app_name"
            android:background="@mipmap/back_gray" />

        <TextView
            android:contentDescription="@string/app_name"
            android:id="@+id/in_text_one"
            android:textSize="@dimen/x40"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y70"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/chongwu" />

        <TextView
            android:contentDescription="@string/app_name"
            android:id="@+id/in_text_two"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y70"
            android:layout_alignBaseline="@+id/in_text_one"
            android:layout_alignBottom="@+id/in_text_one"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="@string/queding"
            android:textSize="@dimen/x40" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        android:background="#d4cbcb"
        />
</LinearLayout>