<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.huanpet.view.activity.login.RegistActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:gravity="center"
        android:text="欢迎来到宠物寄养"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        >


        <EditText

            android:id="@+id/regist_phoneNum"
            android:layout_width="0dp"
            android:layout_height="120px"
            android:layout_weight="1"
            android:hint="请输入手机号码"

            />

        <TextView
            android:id="@+id/regist_verification"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff" />
    </LinearLayout>

    <EditText
        android:id="@+id/regist_phone_code"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_margin="20px"
        android:hint="请输入验证码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_margin="20px">

        <EditText
            android:id="@+id/regist_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入密码"
            android:password="true" />
    </LinearLayout>

    <EditText
        android:id="@+id/regist_sixPass"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_margin="20px"
        android:hint="请设置6位数字密码" />
    <Button
        android:id="@+id/bt_regist"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_margin="20px"
        android:background="#eddb0c"
        android:text="注册"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="————————使用第三方账号登录———————" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/regist_QQ"
            android:layout_width="180px"
            android:layout_height="220px"
            android:layout_margin="30px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140px"
                android:layout_height="140px"
                android:background="@mipmap/login_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机QQ" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/regist_Chat"
            android:layout_width="180px"
            android:layout_height="220px"
            android:layout_margin="30px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140px"
                android:layout_height="140px"
                android:background="@mipmap/login_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>